<?xml version="1.0"?>

<PropertyList>

  <submodel>
    <name>redbeard</name>
    <model>Aircraft/CanberraBI8/Models/RedBeard.xml</model>
    <trigger>ai/submodels/red-beard-released</trigger>
    <speed>0</speed>
    <repeat>false</repeat>
    <count>1</count>
    <x-offset>-20.0</x-offset>
    <y-offset>0</y-offset>
    <z-offset>0.10</z-offset>
    <yaw-offset>0.0</yaw-offset>
    <pitch-offset>0.0</pitch-offset>
    <eda>3.00</eda>
    <cd>0.1</cd> <!-- less than a bullet but more than a tank -->
    <weight>2000</weight>
    <contents>yasim/weights/red-beard-lbs</contents>
    <life>600</life>
    <buoyancy>0</buoyancy>
    <wind>false</wind>
    <aero-stabilised>true</aero-stabilised>
  </submodel>

  <submodel>
    <name>trajectory marker</name>
    <model>Aircraft/CanberraBI8/Models/Trajectory-Marker.xml</model>
    <trigger>ai/submodels/trajectory-markers</trigger>
    <speed>0</speed>
    <repeat>true</repeat>
    <delay>1.0</delay>
    <count>-1</count>
    <x-offset>-20.0</x-offset>
    <y-offset>0</y-offset>
    <z-offset>0.10</z-offset>
    <yaw-offset>0.0</yaw-offset>
    <pitch-offset>0.0</pitch-offset>
    <eda>1000000000.00</eda>
    <life>1200</life>
    <buoyancy>32</buoyancy>
    <wind>false</wind>
    <aero-stabilised>true</aero-stabilised>
  </submodel>

</PropertyList>
